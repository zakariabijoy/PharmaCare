@model IEnumerable<OrderHeader>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">


    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Id</th>
                <th>Name</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Order Status</th>
                <th>Amount</th>
                <th>Bkash TrxId</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.ApplicationUser.UserName</td>
                <td>@item.PhoneNumber</td>
                <td>@item.ApplicationUser.Email</td>
                <td>@item.OderStatus</td>
                <td>@item.OrderTotal</td>
                <td>@item.TransactionId</td>

                    <td>
                        <a asp-area="Admin" asp-controller="Order" asp-action="Details" asp-route-id="@item.Id">Edit</a>
                    </td>

            </tr>
            }

        </tbody>
    </table>

</div>


